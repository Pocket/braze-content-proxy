{
  "name": "braze-content-proxy",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "watch": "tsc -w & nodemon",
    "start": "node dist/main.js",
    "start:dev": "npm run build && npm run watch",
    "test-ci": "npm test",
    "test:watch": "npm test -- --watchAll",
    "test": "jest \"\\.spec\\.ts\"",
    "test-integration": "jest \"\\.integration\\.ts\" --forceExit",
    "lint-check": "eslint --fix-dry-run \"src/**/*.ts\"",
    "lint-fix": "eslint --fix \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pocket/braze-content-proxy.git"
  },
  "dependencies": {
    "@apollo/client": "3.7.16",
    "@sentry/node": "7.53.1",
    "@sentry/tracing": "7.53.1",
    "aws-xray-sdk-express": "3.5.0",
    "cross-fetch": "3.1.6",
    "dataloader": "2.2.2",
    "express": "4.18.2",
    "graphql-tag": "2.12.6"
  },
  "devDependencies": {
    "@pocket-tools/eslint-config": "2.0.0",
    "@pocket-tools/tsconfig": "2.0.1",
    "@types/chai": "4.3.5",
    "@types/jest": "29.5.2",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "chai": "4.3.7",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "nock": "13.3.1",
    "nodemon": "2.0.22",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1"
  }
}
