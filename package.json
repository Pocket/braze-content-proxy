    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "chai": "4.3.6",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "nock": "13.2.4",
    "nodemon": "2.0.16",
    "prettier": "2.5.1",
    "supertest": "6.2.3",
    "ts-jest": "27.1.4",
    "ts-node": "10.5.0",
    "typescript": "4.5.5"
