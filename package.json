    "test-ci": "npm test",
    "test:watch": "npm test -- --watchAll",
    "test": "jest \"\\.spec\\.ts\"",
    "test-functional": "jest \"\\.functional\\.ts\" --forceExit",
    "lint-check": "eslint --fix-dry-run \"src/**/*.ts\"",
    "lint-fix": "eslint --fix \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pocket/braze-content-proxy.git"
  },
  "dependencies": {
    "@apollo/client": "^3.6.0",
    "@apollo/federation": "^0.35.1",
    "@aws-sdk/client-secrets-manager": "^3.82.0",
    "@pocket-tools/apollo-utils": "^2.2.0",
    "@sentry/node": "^6.17.5",
    "@sentry/tracing": "^6.17.4",
    "apollo-datasource-rest": "^3.5.1",
    "apollo-server": "^3.4.1",
    "apollo-server-cache-redis": "^3.3.1",
    "apollo-server-express": "^3.4.1",
    "apollo-server-plugin-response-cache": "^3.3.0",
    "aws-xray-sdk-express": "^3.3.4",
    "cross-fetch": "3.1.5",
